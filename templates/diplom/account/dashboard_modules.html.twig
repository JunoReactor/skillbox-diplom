            <div class="col-xl-6">
              <form method="post">
                <div class="form-group">
                  <label for="articleTitle">Название модуля</label>
                  <input type="text" id="articleTitle" name="articleTitle" class="form-control" placeholder="Название статьи" required autofocus>
                </div>
                <div class="form-group">
                  <label for="articleWord">Код модуля</label>
                  <textarea id="articleWord" name="articleWord" class="form-control" required></textarea>
